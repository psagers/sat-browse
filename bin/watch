#!/bin/sh


if test "$1" = "stop"; then
    tmux send -t 1 C-c
    tmux send -t 0 C-c

    sleep 2

    tmux send -t 1 C-d
    tmux send -t 0 C-d

    sleep 2

    if tmux has-session -t sat-browse; then
        tmux kill-session -t sat-browse
    fi
else
    tmux new-session -s sat-browse -d
    tmux split-window

    tmux send -t 0 'bin/shadow-cljs watch functions' C-m
    tmux send -t 1 'yarn exec -s firebase emulators:start' C-m

    tmux select-pane -t 1

    tmux attach \; select-layout even-horizontal
fi
